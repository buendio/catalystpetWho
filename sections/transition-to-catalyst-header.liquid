{% style %}
  .t-t-cat-header {
    height: 506px;
    display: flex;
    background: #edf4f1;
  }
  .t-t-cat-header__content {
    width: 700px;
    padding: 30px;
  }
  .t-t-cat-header__content h1 {
    font-weight: 700;
    font-size: 49px;
    line-height: 56px;
    text-align: center;
    letter-spacing: -0.02em;
    text-transform: capitalize;
    color: #027747;
  }
  .t-t-cat-header__content img {
    display: block;
    margin: 20px auto;
  }
  .t-t-cat-header__content p {
    font-size: 16px;
    line-height: 28px;
    text-align: center;
    color: #1c1c1c;
    font-family: 'FuturaMedium';
    font-weight: 500;
    margin: 0;
    padding: 0 10px;
  }
  .t-t-cat-header__video {
    width: calc(100% - 700px);
    position: relative;
  }
  .t-t-cat-header__video iframe {
    width: 100%;
    height: 100%;
  }

  .iframe-play-button {
    all: unset;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
  }

  @media(max-width: 1550px) {
    .t-t-cat-header__content {
      width: 570px;
      padding: 30px;
    }
    .t-t-cat-header__video {
      width: calc(100% - 570px);
    }
  }

  @media (max-width: 1150px) {
    .t-t-cat-header__content {
      width: 400px;
    }
    .t-t-cat-header__video {
      width: calc(100% - 400px);
    }
  }

  @media (max-width: 770px) {
    .t-t-cat-header {
      flex-direction: column;
      height: auto;
    }

    .t-t-cat-header__content {
      width: 100%;
      padding: 10px;
      margin-bottom: 30px;
    }
    .t-t-cat-header__video {
      width: 100%;
      height: 400px;
    }
    .t-t-cat-header__content h1 {
      font-size: 42px;
    }
  }
{% endstyle %}

<div class="t-t-cat-header">
  <div class="t-t-cat-header__content">
    <h1>{{ section.settings.heading }}</h1>
    <img src="{{'scoop-by-scoop.png' | asset_url}}" alt="">
    <div>{{ section.settings.body }}</div>
  </div>

  <div class="t-t-cat-header__video">
    {{ section.settings.iframe }}
  </div>
</div>

<script>
  var video = document.querySelector('iframe');

  // Check if the browser supports autoplay
  var canAutoplay = typeof video.play === 'function';

  // Autoplay the video if possible
  if (canAutoplay) {
    video.play();
  } else {
    // Show a play button for the user to start the video manually
    var playButton = document.createElement('button');
    playButton.innerHTML = `<img src="data:image/png;base64,"/>`;
    playButton.classList.add('iframe-play-button');
    playButton.addEventListener('click', function () {
      video.contentWindow.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
      playButton.style.display = 'none';
    });
    video.parentNode.insertBefore(playButton, video);
  }
</script>

{% schema %}
{
  "name": "Transition Header",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How to Transition Your Cat to Catalyst"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body"
    },
    {
      "type": "html",
      "id": "iframe",
      "label": "Video To Embed"
    }
  ],
  "blocks": []
}
{% endschema %}
