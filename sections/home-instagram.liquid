{% assign access_token = section.settings.access_token | escape %}
{% assign tag = section.settings.tag %}

<section
  class="module-container module-hidden {{ section.settings.style }}"
  data-section-id="{{ section.id }}"
  data-section-type="dynamic-instagram"
>
  <div
    class="module-inner dynamic-instagram"
    data-instagram-token="{{ access_token }}">

    {% if section.settings.title != blank %}
      <h1 class="section-title">{{ section.settings.title | escape }}</h1>
    {% endif %}

    <div class="clearfix">
      <div id="rap__med__instagram"></div>
    </div>

    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <div class="home-module-cta">
        <a class="button" href="{{ section.settings.button_link }}">
          {{ section.settings.button_text | escape }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Instagram feed",
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "Style",
      "options": [
        {
          "value": "default-style",
          "label": "Default"
        },
        {
          "value": "accent-style",
          "label": "Accent"
        },
        {
          "value": "contrast-style",
          "label": "Contrast"
        }
      ],
      "default": "default-style"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Instagram feed"
    },
    {
      "type": "text",
      "id": "access_token",
      "label": "Access token",
      "info": "Get your [access token](http:\/\/instagram.pixelunion.net)."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "category": "Social media",
      "name": "Instagram feed"
    }
  ]
}

{% endschema %}