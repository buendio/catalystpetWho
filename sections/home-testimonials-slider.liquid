<div class="cl-testimonials">
    <div class="featured">
        <div class="img-container">
            {% assign featuredImage = 'highfive.png' | asset_url %}
            {% if section.settings.image %}
                {% assign featuredImage = section.settings.image | img_url: '260x', scale: 2 %}
            {% endif %}
            <img src="{{ featuredImage }}" alt="">
        </div>
        <div class="description">
            <div class="paws">
                <img src="{{ 'paw.svg' | asset_url }}" alt="">
                <img src="{{ 'paw.svg' | asset_url }}" alt="">
                <img src="{{ 'paw.svg' | asset_url }}" alt="">
                <img src="{{ 'paw.svg' | asset_url }}" alt="">
                <img src="{{ 'paw.svg' | asset_url }}" alt="">
            </div>
            <h3>{{ section.settings.title | newline_to_br | strip_newlines }}</h3>
            <a href="https://catalystpet.com/collections/frontpage" class="try-catalyst">{{ section.settings.button_text }}</a>
        </div>
    </div>
    <div class="testimonials">
        <div class="testimonial-carousel owl-carousel">
            {% for block in section.blocks %}
                <div>
                    <p class="content">{{ block.settings.content | newline_to_br | strip_newlines }}</p>
                    <p class="author">{{ block.settings.author }}</p>
                </div>
            {% endfor %}     
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Testimonials Slider",
  "class": "section-cl",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Featured image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "HIGH FIVE\nPAW RATING\nAROUND THE LITTER WORLD"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "TRY CATALYST"
    },
    {
      "type": "text",
      "id": "button_price",
      "label": "Button price",
      "default": "$22.99"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button text",
      "default": "Count me in"
    }
  ],
  "blocks": [
    {
      "type": "testimonials",
      "name": "Testimonials",
      "settings": [
        {
          "type": "text",
          "id": "author",
          "label": "Author"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Testimonials Slider"
    }
  ]
}

{% endschema %}