<link rel="stylesheet" href="{{ '5-reasons-banner-updated.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript><link rel="stylesheet" href="{{ '5-reasons-banner-updated.css' | asset_url }}"></noscript>

<div class="reasons-banner">
    <div class="reasons-banner__image-wrapper">
        <img src="{{section.settings.banner_image.src | img_url: '768x'}}" loading="lazy" alt=""
            {%- if section.settings.banner_image_mobile != blank -%}
               class="desktop--only"
            {%- endif -%}   
        />
        {%- if section.settings.banner_image_mobile != blank -%}
            <img src="{{section.settings.banner_image_mobile.src | img_url: '768x'}}" loading="lazy" alt=""
                class="mobile--only"  
            />
        {%- endif -%}    
    </div>

    <div class="reasons-banner__copy">
        <h4>{{section.settings.heading}}</h4>
        <p>{{section.settings.paragraph}}</p>

        <div class="copy__cta">
            <a href="{{section.settings.cta_url}}">{{section.settings.cta_title}}</a>
            <div class="copy__label-images">
                {% for block in section.blocks %}
                    <img src="{{block.settings.label_image.src | img_url: '136x'}}" alt="" loading="lazy" />
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "5 Reasons Hero",
        "settings": [
            {
                "type": "image_picker",
                "id": "banner_image",
                "label": "Banner Image"
            },
            {
                "type": "image_picker",
                "id": "banner_image_mobile",
                "label": "Banner Image mobile"
            },
            {
                "type": "text",
                "id": "heading",
                "label": "Banner Heading"
            },
            {
                "type": "text",
                "id": "paragraph",
                "label": "Hero Paragraph"
            },
            {
                "type": "text",
                "id": "cta_title",
                "label": "CTA Title"
            },
            {
                "type": "url",
                "id": "cta_url",
                "label": "CTA URL"
            }
        ],
        "blocks": [
            {
                "name": "Label Image",
                "type": "image_picker",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "label_image",
                        "label": "Hero Image"
                    }
                ]
            }
        ]
    }
{% endschema %}