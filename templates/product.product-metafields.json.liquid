{%- layout none -%}

{
    "productFeaturedImage": "{{ product.featured_image | img_url: '400x' }}",
    "productTitle": "{{ product.title }}",
    "productVariants": [
        {% for variant in product.variants %}
            {
                "id" : "{{ variant.id }}",
                "title" : "{{ variant.title }}"
            }
            {% unless forloop.last %},{% endunless %}
        {% endfor %}
    ],
    "productVariantDiscountCodes": {
        {% for variant in product.variants %}
            "{{ variant.id }}" : "{{ variant.metafields.subscriptions.discount_variant_id }}"
            {% unless forloop.last %},{% endunless %}
        {% endfor %}
    }
}